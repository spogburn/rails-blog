<h1>Sign up for Alpha Blog</h1>
<% if @user.errors.any? %>
  <h2>The following errors prevented the article from being created.</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %> 
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %>
    <br/>
    <%= f.text_field :username, placeholder: "Enter username" %>
  </p>
  <p>
    <%= f.label :email %>
    <br/>
    <%= f.email_field :email, placeholder: "Enter email" %>
  </p>
  <p>
    <%= f.label :password %>
    <br/>
    <%= f.password_field :password, placeholder: "Enter password" %>
  </p>
  
  <%= f.submit "Sign Up" %>

<% end %>

<p><%= link_to "Back to articles listing", articles_path %></p>